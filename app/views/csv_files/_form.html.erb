<div class="row justify-content-center">
  <div class="col-sm-12 col-md-3">

    <%= form_for(csv_file) do |f| %>
      <div class="card card-fluid">
        <h6 class="card-header">
            Upload CSV File
        </h6>

        <div class="card-body" >
          <%if csv_file.errors.full_messages.any? %>
          <div class="alert alert-danger" role="alert">
            <ul>

          <% csv_file.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
          <%end %>
            </ul>
          </div>
            <%end %>

          <%= f.label :file, "Upload CSV File" %>
          <%= f.file_field :file, class: 'form-control-file', required: true %>

        </div>

        <div class="card-footer text-right">
          <%= link_to 'Back', csv_files_path, class: 'btn btn-primary btn-sm' %> |
          <%= f.submit 'Upload File', class: 'btn btn-primary btn-sm' %>
        </div>

    <% end %>
    </div>
  </div>
</div>
<%= "<div> <br> </div>".html_safe %>
