<div class="row justify-content-center">
  <div class="col-sm-12 col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="card card-fluid">
        <h6 class="card-header">
          Edit User Information
        </h6>

        <div class="card-body" >

          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"> <%= value %> </div>
          <% end %>

          <div class="form-group row" >
            <%= f.label :email, class: 'col-form-label col-sm-12 col-md-4'%> <br/>
            <div class="col-sm-12 col-md-8">
              <%= f.email_field :email, class: " form-control", placeholder: :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <% end %>


          <div class="form-group row">
            <%= f.label :password, class: 'col-form-label col-sm-12 col-md-4' %>  <i>(leave blank if you don't want to change it)</i> <br />
            <div class="col-sm-12 col-md-8">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: :new_password %>
                <% if @minimum_password_length %>
                <br />
               <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
            </div>
          </div>

          <div class="form-group row" >
            <%= f.label :password_confirmation, class: 'col-form-label col-sm-12 col-md-4'%> <br />
            <div class="col-sm-12 col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>
          </div>



          <div class="form-group row" >
            <%= f.label :current_password, class: 'col-form-label col-sm-12 col-md-4'%>
            <div class="col-sm-12 col-md-8">
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>
          </div>
          <h3>--------------------------------------------------</h3>
          <div style="text-align: center;">  <h3>Cancel Account</h3> </div>
          <div style="text-align: center;"> <p>Unhappy? <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p></div>
          <h3>--------------------------------------------------</h3>

        </div>

        <div class="card-footer text-right">
          <%= f.submit "Update", class: 'btn btn-primary btn-sm' %> |
          <%= link_to "Back", :back, class: 'btn btn-primary btn-sm' %>
          <%#= render "devise/shared/links" %>
        </div>

      </div>

    <% end %>
  </div>
</div>

