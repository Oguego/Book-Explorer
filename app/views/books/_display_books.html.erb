<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Published at</th>
    <th>Uuid</th>
    <th>Publisher name</th>
    <% if defined?(adjust) %>
      <th colspan="3"><div class="text-right"> <%= link_to 'New Book', new_book_path, class: 'btn btn-outline-primary' %> </div></th>
    <%end %>
  </tr>
  </thead>

  <tbody>
  <% books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%=  book.author.try(:name) %></td>
      <td><%= book.published_at %></td>
      <td><%= book.uuid %></td>
      <td><%= book.publisher_name %></td>
      <% if defined?(adjust) %>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
    </tr>
  <% end %>
  </tbody>
</table>